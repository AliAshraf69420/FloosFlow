generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  username     String?   @unique
  email        String     @unique
  phoneNumber  String?
  password     String?
  profileImage String?

  googleId     String?   @unique   // <-- ADD THIS

  cards        Card[]
  transactions Transaction[]
  sentTransfers     Transfer[] @relation("SentTransfers")
  receivedTransfers Transfer[] @relation("ReceivedTransfers")
  createdAt    DateTime  @default(now())
}


model Card {
  id         Int    @id @default(autoincrement())
  cardNumber String @unique
  balance    Decimal  @default(0.00)
  expiryDate String?
  cvv String?
    cardType  CardType @default(VISA)
  cardHolder   String?
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
 isActive   Boolean @default(true) // soft delete flag
  isSelectedForReceiving  Boolean  @default(false)  // <-- new field
  // Back-relations
  transactions     Transaction[]
  sentTransfers     Transfer[] @relation("SenderCard")
  receivedTransfers Transfer[] @relation("RecipientCard")
}

model Transaction {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  card         Card      @relation(fields: [cardId], references: [id])
  cardId       Int
  message      String?
  date         DateTime  @default(now())
  category     Category
  money        Decimal @default(0.00)
  transactionName String?
  merchantName String
}

model Transfer {
  id             Int       @id @default(autoincrement())

  sender         User      @relation("SentTransfers", fields: [senderId], references: [id])
  senderId       Int
  senderCard     Card      @relation("SenderCard", fields: [senderCardId], references: [id])
  senderCardId   Int

  recipient      User      @relation("ReceivedTransfers", fields: [recipientId], references: [id])
  recipientId    Int
  recipientCard  Card?     @relation("RecipientCard", fields: [recipientCardId], references: [id])
  recipientCardId Int?

  amount      Decimal @default(0.00)
  reason      String?
  message     String?
  date        DateTime  @default(now())
}
model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String   // "sent", "received", "transaction"
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  UserMessage String?
  requesterEmail String?  // Email of person requesting money (for Accept button)
  requestAmount  Decimal? // Amount being requested (for Accept button)
}

enum Category {
  Groceries
  Transport
  Utilities
  Entertainment
  Health
  Other
}

enum CardType {
  VISA
  MASTERCARD
  AMEX
  MEEZA
  OTHER
}